<script>

    Vue.config.devtools = true;

    var app = new Vue({
        el: '#contact',
        // 綁定模板 data
        data: {
            contactInfo: {
                name: "",
                tel: "",
                email: "",
                company: "",
                typeSelected: "",
                sourceSelected: "",
                description: "",
            },      
            questions: [
                { value: "CRDMO委託製造", text: "CRDMO委託製造" },
                { value: "原料合作 / 採購", text: "原料合作 / 採購" },
                { value: "商品合作 / 採購", text: "商品合作 / 採購" },
                { value: "資訊詢問", text: "資訊詢問" },
                { value: "其他", text: "其他" },
            ], 
            sources:[
                { value: "crdmo", text: "官網平台" },
                { value: "ad", text: "網路廣告" },
                { value: "news", text: "新聞" },
                { value: "fb", text: "臉書" },
                { value: "relatives", text: "親友推薦" },
                { value: "dm", text: "院所/DM" },
                { value: "others", text: "其他" },
            ],
           

        },

        mounted() {

        },

        methods: {
            // 送出資料
            Submit() {
                var _this = this;

                // 確認必填
                var error = "";
                if (_this.contactInfo.name == "") {
                    error += "姓名需填寫\n";
                }
                if (_this.contactInfo.tel == "") {
                    error += "連絡電話需填寫\n";
                }
                if (_this.contactInfo.email == "") {
                    error += "EMAIL需填寫\n";
                }
                if (_this.contactInfo.typeSelected =="") {
                    error += "問題類別需選擇\n";
                }
                if (error) {
                    alert(error);
                    return;
                }
                // 確認必填 end


                $.ajax({
                    url: "@Url.Action("SendToTX", "Mail")",
                    type: "POST",
                    async: false, // 使用同步請求
                    cache: false, // 不緩存結果
                    data: {
                        infoStr: JSON.stringify(_this.contactInfo), // 將 contactInfo 轉換為 JSON 字串傳遞
                    },
                    success(res) {
                        alert(res.message); // 成功後彈出信息
                        location.reload(); // 重新載入當前頁面
                    },
                    error(err) {
                        console.error('Try again, please.', err); // 錯誤處理
                    }
                });



            },

        }
        // methods end



        //
    })
</script>


